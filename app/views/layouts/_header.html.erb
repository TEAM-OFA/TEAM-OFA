<div class = "border-bottom row alert alert-warning" >


    <% if admin_signed_in? %>
        <div class = "col-1" ></div>
        <div class = "mt-2 mr-0 mb-2 ml-0" >
          <%= image_tag 'nagano-cake.png', size: '200x133' %>
        </div>

        <div class = "col-3" ></div>

        <div class = "mt-4 mr-0 mb-4 ml-0 row" >
          <%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-success mt-auto mr-2 mb-auto ml-4 text-dark" %>

          <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-success mt-auto mr-2 mb-auto ml-4 text-dark" %>

          <%= link_to "注文履歴一覧", admin_path, class: "btn btn-outline-success mt-auto mr-2 mb-auto ml-4 text-dark" %>

          <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-success mt-auto mr-2 mb-auto ml-4 text-dark" %>

          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-success mt-auto mr-2 mb-auto ml-4 text-dark" %>
        </div>

      <% elsif customer_signed_in? %>

        <div class = "col-1" ></div>

        <div class = "mt-2 mr-4 mb-2 ml-0" >
          <%= image_tag 'nagano-cake.png', size: '200x133' %>
        </div>

        <p class = "h2 mt-auto mr-3 mb-auto ml-auto">Welcome to Nagano-Cake!</p>

          <div class = "mt-auto mb-auto ml-auto row col-5" >
              <%= link_to "マイページ", customer_path(current_customer), class: "btn btn-outline-success text-dark" %>
            <div class = "col-1" ></div>
              <%= link_to "商品一覧", items_path, class: "btn btn-outline-success text-dark" %>
            <div class = "col-1" ></div>
              <%= link_to "カート", cart_items_path, class: "btn btn-outline-success text-dark" %>
            <div class = "col-1" ></div>
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-success text-dark" %>
          </div>

      <% else %>

        <div class = "col-1" ></div>

        <div class = "mt-2 mr-4 mb-2 ml-0" >
          <%= image_tag 'nagano-cake.png', size: '200x133' %>
        </div>

        <div class = "col-4" >
          <div id = "image-slider" >

          </div>
        </div>

        <div class = "mt-auto mr-0 mb-auto ml-auto row col-5" >
            <%= link_to "About", about_path, class: "btn btn-outline-success text-dark" %>
          <div class = "col-1" ></div>
            <%= link_to "商品一覧", items_path, class: "btn btn-outline-success text-dark" %>
          <div class = "col-1" ></div>
            <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-success text-dark" %>
          <div class = "col-1" ></div>
            <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-success text-dark" %>
        </div>

      <% end %>

</div>