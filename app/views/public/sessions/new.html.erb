<div class="container">
  <div class="row">
    <div class="mx-auto offset-lg-2">
      <div>
        <%= flash[:login_notice] %>
      </div>

      <h2 class="text-danger"><i class="fa-solid fa-cake-candles"></i> Log in</h2>

      <%= form_with model: @customer, url: session_path(resource_name) do |f| %>
        <div class="field">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: 'btn btn-sm btn-danger' %>
        </div>
      <% end %>

      <h5>会員登録をお済みでない方</h5>
      <%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>