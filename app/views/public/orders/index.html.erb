<div class = "lert alert-warning" >
  <h4 class = "d-flex justify-content-center" >注文履歴一覧</h4>
</div>

<div class = "d-flex justify-content-center col-12" >
  <table class = "table table-hover table-bordered table-condensed col-9">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |f| %>
        <tr>
          <td><%= f.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            <%= "〒" + f.post_code %><br />
            <%= f.address %><br />
            <%= f.name %>
          </td>
          <td>
            <% f.order_details.each do |order_detail| %>
              <%= order_detail.item.name %>
            <% end %>
          </td>
          <td><%= f.total_payment %>円</td>
          <td><%= f.status %></td>
          <td><%= link_to "詳細", order_path(f.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>