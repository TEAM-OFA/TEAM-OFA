<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h4 class="bg-danger text-center text-white py-2">商品一覧</h4>
    </div>
    <div class="col-12 d-flex flex-wrap mt-5">
      <% @items.each do |item| %>
        <div class="col-md-3 mb-4 d-flex flex-column align-items-center">
          <%= link_to item_path(item) do %>
          <%= image_tag item.image, size: "150x150", class: "mt-3 rounded-circle" %>
          <% end %>
         <div class="mt-2 text-center">
          <h5><%= item.name %></h5>
          <p><%= number_with_delimiter(item.price) %>円</p>
         </div>
        </div>
      <% end %>
        <div class="col-12 d-flex justify-content-center mt-4">
          <%= paginate @items %>
        </div>
  </div>
</div>
