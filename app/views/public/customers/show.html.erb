<div class="container mt-5">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">


<h4 class="mb-4">マイページ</h4>


<h5>登録情報</h5>
<%= link_to "編集する", edit_customer_path, class:'btn btn-sm btn-success' %>

<table class="table">
  <tbody>
    <tr>
      <td>氏名</td>
      <td>
        <%= @customer.last_name %> <%= @customer.first_name %>
      </td>
    </tr>

    <tr>
      <td>カナ</td>
      <td>
        <%= @customer.last_name_kana %> <% @customer.first_name_kana %>
      </td>
    </tr>

    <tr>
      <td>郵便番号</td>
      <td><%= @customer.post_code %></td>
    </tr>

    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>

    <tr>
      <td>電話番号</td>
      <td><%= @customer.phone_number %></td>
    </tr>

    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>

    <tr>
      <td>配送先</td>
      <td><%= link_to "一覧を見る", addresses_path, class:'btn btn-sm btn-primary' %></td>
    </tr>

    <tr>
      <td>注文履歴</td>
      <td><%= link_to "一覧を見る", orders_path, class:'btn btn-sm btn-primary' %></td>
    </tr>
  </tbody>

</table>

    </div>
  </div>
</div>
