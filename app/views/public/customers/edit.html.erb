<div class="container">
  <div class="row">
    <div class="mx-auto offset-lg-2">

      <h5>会員情報編集</h5>


      <%= form_with model: @customer do |f| %>


      <table class="table">
      <tbody>
        <tr>
          <td class="field">
            <th>名前</th>
            <td><%= f.label :"(姓)" %></td>
            <td><%= f.text_field :last_name %></td>
          </td>

          <td class="field">
            <th></th>
            <td><%= f.label :"(名)" %></td>
            <td><%= f.text_field :first_name %></td>
          </td>
        </tr>

        <tr>
          <td class="field">
            <th>フリガナ</th>
            <td><%= f.label :"(カナ)" %></td>
            <td><%= f.text_field :last_name_kana %></td>
          </td>

          <td class="field">
            <th></th>
            <td><%= f.label :"(メイ)" %></td>
            <td><%= f.text_field :first_name_kana %><td></td>
          </td>
        </tr>

        <tr>
          <td class="field">
            <td><%= f.label :"郵便番号" %></td>
            <td></td>
            <td><%= f.text_field :post_code %></td>
          </td>
        </tr>

        <tr>
          <td class="field">
            <td><%= f.label :"住所" %></td>
            <td></td>
            <td><%= f.text_field :address %></td>
          </td>
        </tr>

        <tr>
          <td class="field">
            <td><%= f.label :"電話番号" %></td>
            <td></td>
            <td><%= f.text_field :phone_number %></td>
          </td>
        </tr>

        <tr>
          <td class="field">
            <td><%= f.label :"メールアドレス" %></td>
            <td></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </td>
        </tr>

   <tr>
      <td class="actions">
         <td><%= f.submit "編集内容を保存", class:'btn btn-sm btn-success' %></td>
         <td><%= link_to "退会確認画面", check_customers_path, class:'btn btn-sm btn-danger' %></td>
      </td>
   </tr>
<% end %>

 </tbody>
 </table>
    </div>
  </div>
</div>
