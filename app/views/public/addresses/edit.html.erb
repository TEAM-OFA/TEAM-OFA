<div class="container mt-5">

<div class="row justify-content-center">

<div class="col-md-8">

<h1>配送先編集</h1>

<%= form_with model: @address do |f| %>
  <div class="form-group">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :post_code, class: 'form-control address_post_code' %>
  </div>
  <div class="form-group">
    <%= f.label :住所 %><br />
    <%= f.text_area :address, class: 'form-control address_address' %>
  </div>
  <div class="form-group">
    <%= f.label :宛先 %><br />
    <%= f.text_area :name, class: 'form-control address_name' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>

</div>
</div>
</div>