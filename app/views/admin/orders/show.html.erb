<div class="container">
  <h2>注文履歴詳細</h2>
  <div class="row">
    <div class="col-xs-6">


      <div>
        <p>

          <strong class="col-xs-2">購入者</strong>
          <%= link_to admin_customer_path(@order.customer.id) do %>
            <%= @order.customer.last_name %><%= @order.customer.first_name %>
          <% end %>
        </p>
      </div>

      <div>
        <p>
          <strong class="col-xs-2">注文日</strong>
          <%= @order.created_at.strftime("%Y/%m/%d %H:%M") %>
        </p>
      </div>


      <div>
        <p>
          <strong class="col-xs-2">配送先</strong>
          <%= @order.post_code %>
          <%= @order.address %>
        </p>
      </div>


      <div>
        <p>
          <strong class="col-xs-2">支払い方法</strong>
          <%= @order.payment_method_i18n %>
        </p>
      </div>

      <div>
        <p>
          <strong class="col-xs-4">注文ステータス</strong>
          <%= form_with model: @order, url:admin_order_path(@order), method: :patch do |f| %>
            <%= f.select :order_status, [
              [Order.order_statuses_i18n[:waiting_for_payment], :waiting_for_payment],
              [Order.order_statuses_i18n[:payment_confirmation], :payment_confirmation],
              [Order.order_statuses_i18n[:making], :making],
              [Order.order_statuses_i18n[:shipping_in_process], :shipping_in_process],
              [Order.order_statuses_i18n[:shipped], :shipped]
            ] %>
            <%= f.submit "更新", class:"btn btn-success btn-sm mx-3" %>
          <% end %>
        </p>


      <table class="order-show-table table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <% @order_details.each do |order_detail| %>

        <tbody>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal %></td>



              <td> <!--製作ステータス-->
                <%= form_with model: order_detail, url:admin_order_detail_path(order_detail.id), method: :patch do |f| %>
                  <%= f.select :making_status, [
                    [OrderDetail.making_statuses_i18n[:making_unable], :making_unable],
                    [OrderDetail.making_statuses_i18n[:waiting_for_making], :waiting_for_making],
                    [OrderDetail.making_statuses_i18n[:in_making], :in_making],
                    [OrderDetail.making_statuses_i18n[:making_completed], :making_completed]
                  ] %>

                  <%= f.submit "更新", class:"btn btn-success btn-sm mx-3" %>
                <% end %>
              </td>
            </tr>
        <% end %>
      </table>
    </div>
  </div>


  <div class="col-1"></div>
  <div class="col-md-4">
    <table class="table table-bordered">
    <tbody>
      <tr>
        <td>商品合計</td>
        <td><%= number_with_delimiter(@order.total_payment - 800) %>
          <%#= (@order.total_payment - 800).to_s(:delimited) %>円</td>
      </tr>

      <tr>
        <td>送料</td>
        <td><%= @order.shopping_cost.to_s(:delimited) %>円</td>
      </tr>

      <tr>
        <td>請求金額合計</td>
        <td><%= @order.total_payment.to_s(:delimited) %>円</td>
      </tr>
    </tbody>
   </table>
   </div>
  </div>

