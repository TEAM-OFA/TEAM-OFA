<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header text-center bg-secondary text-white">
          商品一覧
        </div>
        <div class="card-body">
          <div class="mb-3 text-end">
            <%= link_to new_admin_item_path do %>
              <i class="fa-solid fa-circle-plus fa-2x" style="color:gray;"></i>
            <% end %>
          </div>
          <table class="table table-striped table-bordered">
            <thead class="thead-secondary">
              <tr>
                <th scope="col">商品ID</th>
                <th scope="col">商品名</th>
                <th scope="col">税抜き価格</th>
                <th scope="col">ジャンル</th>
                <th scope="col">ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @items.each do |item| %>
                <tr>
                  <td><%= item.id %></td>
                  <td><%= link_to admin_item_path(item) do %>
                    <%= item.name %>
                    <% end %></td>
                  <td><%= item.price %></td>
                  <td><%= item.genre.name %></td>
                  <% if item.is_active %>
                      <td><span style="color: green;">販売中</span></td>
                  <% else %>
                      <td><span style="color: gray;">販売停止</span>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
