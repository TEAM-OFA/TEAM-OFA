<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h4 class="bg-info text-center text-white py-2">商品詳細</h4>
    </div>
    <div class="col-md-4">
      <%= image_tag @item.image, size: "250x180", class: "img-fluid" %>
    </div>
    <div class="col-md-8">
      <table class="table">
        <tbody>
          <tr>
            <th scope="row">商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th scope="row">商品説明</th>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <th scope="row">ジャンル</th>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <th scope="row">税込価格</th>
            <td><%= number_with_delimiter(@item.with_tax_price) %>円 (<%= number_with_delimiter(@item.price) %>)円</td>
          </tr>
          <tr>
            <th scope="row">販売ステータス</th>
            <td>
              <% if @item.is_active %>
                <span style="color: green;">販売中</span>
              <% else %>
                <span style="color: gray;">販売停止</span>
              <% end %>
            </td>
          </tr>
          <tr>
            <td><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-sm btn-success" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
