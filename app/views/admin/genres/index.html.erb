<div>
  <%= flash[:genre_update_notice] %>
</div>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      
      <h4 class="card-header mb-4">ジャンル一覧・追加</h4>
      
      <%= form_with model: @genre, url: admin_genres_path, method: :post, class: "form-inline" do |f| %>
        <div class="form-group mr-2">
          <label for="item_name" class="mr-3"><h5>ジャンル名</h5></label>
          <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control form-control-sm" %>
        </div>
        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-outline-info ml-3" %>
        </div>
      <% end %>

      <table class="table table-hover table-inverse mt-4">
        <thead>
          <tr>
            <th><p class="mb-2">ジャンル</p></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
