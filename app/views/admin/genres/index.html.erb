<div>
  <%= flash[:notice] %>
</div>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

　　　<h4 class="card-header text-center">ジャンル一覧・追加</h4>
　　　 <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
　　　 
        <div class="form-group row">
       　<label for="item_name" class="col-sm-3 col-form-label"><h4>ジャンル名</h4></label>
         <div class="col-sm-9">
         <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control form-control-sm" %>
         </div>
         </div>

        </div>
        <div class="form-group row">
    　　 <div class="col-sm-9 offset-sm-3">
        　<%= f.submit "新規登録", class: "btn btn-outline-success mt-3" %>
　　　　 </div>
        </div>
       <% end %>
       
       <table class='table table-hover table-inverse'>
        <thead>
         <tr>
          <th>ジャンル</th>
          <th></th>
         </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
           <td><%= genre.name %></td>
           <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td>
           </tr>
          <% end %>
        </tbody>

   </div>
  </div>
</div>