<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <h4 class="card-header text-center">ジャンル編集</h4>
      <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch do |f| %>
      
        <div class="form-group row align-items-center">
          <label for="genre_name" class="col-sm-2 col-form-label"><h4>ジャンル名</h4></label>
          <div class="col-sm-6">
            <%= f.text_field :name, class: "form-control form-control-sm" %>
          </div>
          <div class="col-sm-4">
            <%= f.submit '変更を保存', class: "btn btn-outline-success btn-sm" %>
          </div>
        <% end %>
   </div>
  </div>
</div>